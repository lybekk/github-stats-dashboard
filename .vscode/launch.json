    "version": "0.2.0",
    "configurations": [
        {
            "type": "firefox",
            "request": "launch",
            "reAttach": true,
            "name": "Launch localhost",
            "url": "http://localhost:4200/index.html",
            "pathMappings": [
                {
                    "url": "webpack:///src",
                    "path": "${workspaceFolder}/src"
                },
                {
                    "url": "webpack:///src",
                    "path": "${workspaceFolder}/src"
                },
                {
                    "url": "webpack:///src",
                    "path": "${workspaceFolder}/src"
                },
                {
                    "url": "http://localhost:4200",
                    "path": "${workspaceFolder}/src"
                }
            ]
        },
        {
            "type": "objectscript",
            "request": "launch",
            "name": "XDebug"
        },
        {
            "type": "objectscript",
            "request": "attach",
            "name": "ObjectScript Attach",
            "processId": "${command:PickProcess}",
            "system": true
        }
    ]
}